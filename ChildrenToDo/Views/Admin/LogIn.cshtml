@{
    

    HttpCookie c_fLogin = Request.Cookies["fLogin"];

    if (c_fLogin == null)
    {
        ViewBag.fLogin = "";
    }
    else
    {
        ViewBag.fLogin = c_fLogin.Value;
    }

    HttpCookie c_fPassword = Request.Cookies["fPassword"];

    if (c_fPassword == null)
    {
        ViewBag.fPassword = "";
    }
    else
    {
        ViewBag.fPassword = c_fPassword.Value;
    }
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="login_card">
            <div class="card-header text-center">
                <h3>教師專區 登入系統</h3>
            </div>
            <div class="card-body text-center">
                <form method="post" action="/Admin/Login">
                    <div class="form-group">
                        <label for="login">帳號</label>
                        <input value="@ViewBag.fLogin" type="text" class="form-control" id="login" name="fLogin" placeholder="請輸入帳號" style="max-width:100%">
                    </div>
                    <div class="form-group">
                        <label for="password">密碼</label>
                        <input value="@ViewBag.fPassword" type="password" class="form-control" id="password" name="fPassword" placeholder="請輸入密碼" style="max-width:100%">
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="keep" value="1" name="keep" @(ViewBag.fLogin != "" ? "checked" : "")>
                        <label class="form-check-label" for="keep">記憶帳號</label>
                    </div>
                    <button type="submit" class="btn btn-lg btn-info btn-block">登入</button>
                    @if (ViewBag.msg != null)
                    {
                        <div class="alert alert-info my-3" role="alert">
                            @ViewBag.msg
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>



