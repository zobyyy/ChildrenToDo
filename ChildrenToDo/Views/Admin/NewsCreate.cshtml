@model ChildrenToDo.Models.tNews

@{
    ViewBag.Title = "NewsCreate";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<form method="post" enctype="multipart/form-data" action="/Admin/NewsCreate">
    <h4>發布 最新消息</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("標題", htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            @Html.EditorFor(model => model.NTitle, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(model => model.NTitle, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("內容", htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            @Html.TextAreaFor(model => model.NContent, new { @class = "form-control", rows = "8" })
            @Html.ValidationMessageFor(model => model.NContent, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="file">請選擇上傳檔案</label>
        <input type="file" class="form-control-file" id="file" name="file">
    </div>


    <div class="form-group m-auto d-flex">
        <div>
            <input type="submit" value="發布" class="btn btn-primary" />
        </div>

    </div>
</form>

@if (ViewBag.msg == "OK")
{
    <script>
        swal("Good job!", "檔案及消息內容上傳成功!", "success");
    </script>
}
else if (ViewBag.msg == "no_file")
{
    <script>
        swal("Good job!", "消息上傳成功!", "success");
    </script>
}
else if (ViewBag.msg == "TypeError")
{
    <script>
        swal("Good job!", "檔案格式錯誤!", "error");
    </script>
}

@ViewBag.message

<div style="margin-top:10px">
    @Html.ActionLink("返回最新消息列表", "NewsIndex")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
