@model IEnumerable<ChildrenToDo.Models.tBanner>

@{

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<h2 class="text-center mb-4">看板相片列表</h2>


<form method="post" enctype="multipart/form-data" action="/Admin/BannerCreate" class="text-center">
    <div class="form-group">
        <label for="bann_title">看板標題</label>
        <input type="text" class="form-control-file" id="bann_title" name="bann_title">
    </div>
    <div class="form-group d-block mt-5">
        <input type="file" multiple class="form-control-file" id="bannerFiles" name="bannerFiles">
    </div>
    <input type="submit"  value="確認上傳" class="btn btn-danger mt-3" />
</form>

@if (TempData["msg"] != null)
{
    <script>
        swal("Good job!", "@TempData["msg"]" , "success");
    </script>
}